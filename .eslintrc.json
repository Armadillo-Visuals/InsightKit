{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-unused-vars": ["off", { "vars": "local" }],
    "indent": ["warn", 2],
    "quotes": ["warn", "single"],
    "prefer-const": "warn",
    "semi": ["warn", "always"],
    "react/prefer-stateless-function": "off",
    "react/prop-types": "off",
    "react/jsx-key": "warn"
  }
}
